{
  "name": "ledn-token",
  "version": "0.1.0",
  "description": "a BackEnd REST API to query Ledn Tokens",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Basel Abdo",
  "scripts": {
    "prettier": "prettier --write \"{src,test}/**/*.ts\"",
    "start": "npm run serve",
    "build": "npm run prettier && npm run build-ts && npm run tslint",
    "serve": "node -r dotenv/config dist/src/server.js",
    "watch-node": "nodemon --exec ts-node -- ./src/server.ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "npm run prettier && npm run tslint-test && nyc mocha",
    "test:local": "TS_NODE_CACHE=false npm run test",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-test": "tslint -c tslint.test.json -p tsconfig.test.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/src/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "config": "~3.2.2",
    "dotenv": "~8.1.0",
    "express": "~4.17.1",
    "lodash": "~4.17.15",
    "request": "~2.88.0",
    "request-promise": "~4.2.4",
    "stream-json": "~1.7.2",
    "swagger-express-middleware": "~4.0.2",
    "swagger-ui-express": "~4.0.7",
    "winston": "~3.2.1"
  },
  "devDependencies": {
    "@types/chai": "~4.2.2",
    "@types/chai-as-promised": "~7.1.2",
    "@types/config": "0.0.34",
    "@types/express": "~4.17.1",
    "@types/lodash": "~4.14.138",
    "@types/mocha": "~5.2.7",
    "@types/node": "~10.14.4",
    "@types/request": "~2.48.3",
    "@types/request-promise": "~4.1.44",
    "@types/sinon": "~7.0.13",
    "@types/sinon-chai": "~3.2.3",
    "@types/stream-json": "^1.7.1",
    "@types/supertest": "~2.0.8",
    "@types/swagger-express-middleware": "~1.0.10",
    "@types/swagger-ui-express": "~3.0.1",
    "chai": "~4.2.0",
    "chai-as-promised": "~7.1.1",
    "concurrently": "^6.2.1",
    "mocha": "~6.2.0",
    "nodemon": "^2.0.12",
    "nyc": "~14.1.1",
    "prettier": "~1.18.2",
    "sinon": "~7.4.2",
    "sinon-chai": "~3.3.0",
    "source-map-support": "~0.5.13",
    "supertest": "~4.0.2",
    "ts-node": "~8.3.0",
    "tslint": "~5.20.0",
    "typescript": "~3.6.2"
  }
}
